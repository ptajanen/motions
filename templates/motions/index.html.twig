{% extends 'base.html.twig' %}
{% block title %}Motions{% endblock %}
  {% block body %}
  
    <h1>Motions by Personnel</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Description</th>
                <th>Creation Date</th>
                <th>Author</th>
                <th>Contact</th>
            </tr>
        </thead>
        <tbody>
            {% for motions in motionss %}
            <tr>
                <th>{{ motions.id }}</th>
                <td>{{ motions.title }}</td>
                <td>{{ motions.descrpt }}</td>
                <td>{{ motions.date|date('Y-m-d') }}</td>
                <td>{{ motions.name }}</td>
                <td>{{ motions.email }}</td>
                <td>
                    <div class = buttons>
                    <a href="{{ path( "motions_show", {id:motions.id} ) }}"  class ="btn btn-outline-primary btn-sm" style="margin:4px;">Show</a>
                    <a href="{{ path( "motions_edit", {id:motions.id} ) }}" class="btn btn-outline-warning btn-sm" style="margin:4px;">Edit</a>
                    <a href="{{ path( "motions_print", {id:motions.id} ) }}" class="btn btn-outline-success btn-sm" style="margin:4px;">Print</a>
                    <button delete-motions = "{{ motions.id }}" class="btn btn-danger btn-sm delete-motions" style="margin:4px;">Delete</button>
                    </div>                
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% endblock %}

{% block javascripts %} {{ parent() }}
<script src="js/main.js"></script>
{% endblock %}
